doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    meta(name="viewport", content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0")
    title Noom
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH", crossorigin="anonymous")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css")
  body
    header.p-3.text-center
      h1 Random Face Chat
      .container
        .row.justify-content-center
          #my-nickname.col-md-3.col-sm-6
          #peer-nickname.col-md-3.col-sm-6
    main.d-flex.justify-content-center.align-items-center
      // Set Nickname
      #nickname.w-50
        form.form-control.p-3
          .mb-3
            label.form-label Input Your Nickname
            input.form-control(type="text", required="true")
          button.btn.btn-primary Enter
      // Host Select
      #select-host.w-50.d-none
        .form-control.p-3
          p Select Host or Guest:
          .container-fluid
            .row.gy-3
              .col
                button#host-button.btn.btn-primary.w-100 Host
              .col
                button#guest-button.btn.btn-primary.w-100 Guest
      #chat-room.container.d-none
        // Video Chat
        #video-area.d-flex.flex-column.align-items-center
          // Videos
          #video-container.position-relative.d-flex.justify-content-center.mb-2
            #my-video-container.position-absolute
              video(autoplay, playsinline, width="600", height="400")
            #peer-video-container
              video(autoplay, playsinline, width="600", height="400")
          // Video Controls
          #controls.container-fluid
            .row.gx-2.gy-2.mb-2
              .col-md-3.col-sm-6
                .btn-group.w-100
                  button#select-camera-button.btn.btn-primary.w-100.dropdown-toggle(data-bs-toggle="dropdown") Select Camera
                  ul.dropdown-menu
                    li
                      button.dropdown-item Camera 1
                    li
                      button.dropdown-item Camera 2
              .col-md-3.col-sm-6
                button#camera-button.btn.btn-primary.w-100 Hide Camera
              .col-md-3.col-sm-6
                button#mute-button.btn.btn-primary.w-100 Mute
              .col-md-3.col-sm-6
                button#select-host-button.btn.btn-primary.w-100(data-bs-toggle="modal", data-bs-target="#select-host-modal") Select Host
              .col-md-3.col-sm-6
                button#open-text-button.btn.btn-primary.w-100.d-none(data-bs-toggle="offcanvas", data-bs-target="#chat-offcanvas") Open Text Chat
        // Text Chat
        #chat-offcanvas.offcanvas.offcanvas-end
          .offcanvas-header.border-bottom
            h4#chat-offcanvas-label.offcanvas-title Text Chat
            button.btn-close(data-bs-dismiss="offcanvas", data-bs-target="#chat-offcanvas-label")
          .offcanvas-body.d-flex.flex-column
            #chat-message-area.flex-grow-1.d-flex.flex-column.px-3.overflow-auto
