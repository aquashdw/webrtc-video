doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    meta(name="viewport", content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0")
    title Noom
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH", crossorigin="anonymous")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css")
  body
    header.p-3.text-center
      h1 Random Face Chat
    main.d-flex.justify-content-center.align-items-center
      #nickname.w-50.d-none
        form.form-control.p-3
          .mb-3
            label.form-label Input Your Nickname
            input.form-control(type="text", required="true")
          button.btn.btn-primary Enter
      #select-host.w-50.d-none
        .form-control.p-3
          p Select Host or Guest:
          .container-fluid
            .row.gy-3
              .col
                button.btn.btn-primary.w-100 Host
              .col
                button.btn.btn-primary.w-100 Guest
      #chat-room.position-relative.w-75.d-flex.flex-column.align-items-center
        #video-container.d-flex.justify-content-center.mb-2
          #my-video-container.position-absolute
            video(autoplay, playsinline, width="600", height="400")
          #peer-video-container
            video(autoplay, playsinline, width="600", height="400")
        #controls.container-fluid
          .row.gx-2.gy-2
            .col-md-3.col-sm-6
              button.btn.btn-primary.w-100(data-bs-toggle="modal", data-bs-target="#select-host-modal") Select Host
            .col-md-3.col-sm-6
              .btn-group.w-100
                button.btn.btn-primary.w-100.dropdown-toggle(data-bs-toggle="dropdown") Select Camera
                ul.dropdown-menu
                  li
                    button.dropdown-item Camera 1
                    button.dropdown-item Camera 2
            .col-md-3.col-sm-6
              button.btn.btn-primary.w-100 Hide Camera
            .col-md-3.col-sm-6
              button.btn.btn-primary.w-100 Mute

    // Modal
    section#modals
      #select-host-modal.modal.fade(tabindex="-1")
        .modal-dialog.modal-dialog-centered
          .modal-content
            .modal-header
              h5.modal-title Select Host
              button.btn-close(data-bs-dismiss="modal")
            .modal-body.p-0
              ul.list-group.list-group-flush
                li.list-group-item Alex
                li.list-group-item Brad
            .modal-footer
              button.btn.btn-secondary(data-bs-dismiss="modal") Cancel

  script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js", integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz", crossorigin="anonymous")
  script(src="/socket.io/socket.io.js")
  script(src="/public/app.js")
